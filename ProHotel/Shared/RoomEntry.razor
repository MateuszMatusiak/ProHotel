@using ProHotel.Data
@inject RoomEntryService RoomEntryService

<div class="container main_table">
    <div class="row">
        <div class="col-md room_image">
            <img src="data:image/png;base64,@room.ImageUrl" class="img-fluid" alt="Room image not found">
        </div>
        <div class="col-md">
            <div class="col-md">
                <div class="col">@room.Name</div>
                <div class="small_info">
                    <div class="row">
                        <div class="col">Pow. @room.Space</div>
                        <div class="col">Liczba osób: @room.Seats</div>
                    </div>
                    <div class="col">@room.Beds łóżka</div>
                </div>
            </div>
        </div>
        <div class="col-md">
            <div class="col-md">
                <div class="col">Wariant @room.Variant</div>
                <div class="col">@room.PricePerDay zł/doba</div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Room room { get; set; }

}