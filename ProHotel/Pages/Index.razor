@page "/"

<PageTitle>ProHotel</PageTitle>

<div class="row">
	<div class="col-md-4" style="margin: 2% 2% 0 5%;width: 12%">
		<SearchField OnSearchClicked="data => GetSearchResult(data)"/>
	</div>
	<div class="col-md-8" style="margin-left: 5%">
		<SearchResult Random="true" SearchField="searchRoomJSON"/>
	</div>
</div>

@code{
	private SearchRoomJSON searchRoomJSON { get; set; }

    private void GetSearchResult(SearchRoomJSON roomJson)
    {
        searchRoomJSON = roomJson;
    }
}